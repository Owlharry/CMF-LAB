// --- API 核心逻辑 ---
const analyzePaintCMF = async (referenceImagesBase64, config) => {
  const { provider, apiKey } = config;
  const validImages = referenceImagesBase64.filter(img => img !== null);
  if (validImages.length === 0) throw new Error("请至少上传一张参考图");

  const systemPrompt = `
    你是一位资深汽车CMF工程师。请综合分析提供的参考图，剔除环境光干扰，提取车漆物理属性。
    输出严格JSON格式：
    1. color_name: 中文商业命名 + 英文专业命名。
    2. base_color: Hue, Value, Saturation 描述。
    3. flake_type: 颗粒类型 (Metallic/Pearl/etc)。
    4. travel_effect: 随角异色 (Face/Flop Tone)。
    5. finish_type: 表面处理 (Gloss/Matte)。
    6. synthesis_prompt: 用于AI生图的英文Prompt，强调 "photorealistic automotive paint"。
  `;
  const userPrompt = `基于这 ${validImages.length} 张图，分析车漆CMF属性。`;

  switch (provider) {
    case 'gemini_default': return await callGeminiAnalysis(userPrompt, systemPrompt, validImages, ""); 
    case 'gemini_custom': if (!apiKey) throw new Error("请配置 Gemini API Key"); return await callGeminiAnalysis(userPrompt, systemPrompt, validImages, apiKey);
    default: return await mockExternalCall(provider, apiKey, "Analysis");
  }
};

const renderCarPaint = async (targetImageBase64, cmfData, config) => {
  const { provider, apiKey } = config;
  const prompt = `
    Action: Repaint the car.
    Style: Photorealistic 8k automotive photography.
    Paint: ${cmfData.base_color}, ${cmfData.finish_type}, ${cmfData.flake_type}, ${cmfData.travel_effect}.
    Specifics: ${cmfData.synthesis_prompt}
    Constraint: Maintain car shape, lighting, background exactly. Only change paint.
  `;

  switch (provider) {
    case 'gemini_default': return await callGeminiRendering(prompt, targetImageBase64, "");
    case 'gemini_custom': if (!apiKey) throw new Error("请配置 Gemini API Key"); return await callGeminiRendering(prompt, targetImageBase64, apiKey);
    default: return await mockExternalRender(provider, apiKey);
  }
};

const callGeminiAnalysis = async (userPrompt, systemPrompt, images, apiKey) => {
  const contentParts = [{ text: userPrompt }, ...images.map(img => ({ inlineData: { mimeType: "image/jpeg", data: img } }))];
  const actualModel = "gemini-2.5-flash-preview-09-2025";
  const response = await fetch(`https://generativelanguage.googleapis.com/v1beta/models/${actualModel}:generateContent?key=${apiKey}`, {
    method: 'POST',
    headers: { 'Content-Type': 'application/json' },
    body: JSON.stringify({ contents: [{ role: "user", parts: contentParts }], systemInstruction: { parts: [{ text: systemPrompt }] }, generationConfig: { responseMimeType: "application/json" } })
  });
  if (!response.ok) throw new Error("Gemini API 请求失败");
  const data = await response.json();
  return JSON.parse(data.candidates[0].content.parts[0].text);
};

const callGeminiRendering = async (prompt, imageBase64, apiKey) => {
  const actualModel = "gemini-2.5-flash-image-preview";
  const response = await fetch(`https://generativelanguage.googleapis.com/v1beta/models/${actualModel}:generateContent?key=${apiKey}`, {
    method: 'POST',
    headers: { 'Content-Type': 'application/json' },
    body: JSON.stringify({ contents: [{ parts: [{ text: prompt }, { inlineData: { mimeType: "image/jpeg", data: imageBase64 } }] }], generationConfig: { responseModalities: ["IMAGE"] } })
  });
  if (!response.ok) throw new Error("Gemini 渲染服务响应错误");
  const data = await response.json();
  const generatedImage = data.candidates?.[0]?.content?.parts?.find(p => p.inlineData)?.inlineData?.data;
  if (!generatedImage) throw new Error("未能生成图像");
  return generatedImage;
};

const mockExternalCall = async (modelName, apiKey, type) => {
  await new Promise(r => setTimeout(r, 2000));
  return {
    color_name: `(来自 ${modelName}) 液态银翼 (Liquid Silver)`,
    base_color: "Chrome-like silver with high reflectivity.",
    flake_type: "Nano-scale smooth metallic.",
    travel_effect: "Face: Bright Mirror, Flop: Dark Steel.",
    finish_type: "Liquid Metal Finish",
    synthesis_prompt: `A car painted in liquid metal silver, mirror finish, futuristic lighting, ${modelName} style.`
  };
};

const mockExternalRender = async (modelName, apiKey) => {
  await new Promise(r => setTimeout(r, 2000));
  throw new Error(`演示模式：成功连接到 ${modelName}。为保证演示流畅，请使用 Gemini Default 通道体验真实生成。`);
};


// --- UI 组件 (已本地化 + 文案优化) ---

const GlassCard = ({ children, className = "", onClick, hoverEffect = false }) => (
  <div 
    onClick={onClick}
    className={`
      glass-card rounded-2xl overflow-hidden transition-all duration-500
      ${hoverEffect ? 'hover:shadow-[0_8px_40px_rgba(34,211,238,0.1)] hover:-translate-y-1 hover:border-white/10' : ''}
      ${className}
    `}
  >
    {children}
  </div>
);

const Badge = ({ children, variant = "default" }) => {
  const styles = {
    default: "bg-white/5 text-zinc-400 border border-white/5",
    accent: "bg-cyan-500/10 text-cyan-300 border border-cyan-500/20 shadow-[0_0_10px_rgba(34,211,238,0.1)]",
    warning: "bg-amber-500/10 text-amber-300 border border-amber-500/20",
    outline: "bg-transparent border border-zinc-700 text-zinc-500",
  };
  return (
    <span className={`px-2.5 py-1 text-[10px] font-medium uppercase tracking-widest rounded-full backdrop-blur-md ${styles[variant]}`}>
      {children}
    </span>
  );
};

const Button = ({ children, onClick, disabled, variant = "primary", icon: Icon, className = "", size = "md" }) => {
  const sizes = { sm: "px-4 py-2 text-xs", md: "px-6 py-3 text-sm", lg: "px-8 py-4 text-base" };
  
  const baseStyle = `
    relative overflow-hidden group flex items-center justify-center gap-2 rounded-xl font-medium tracking-wide transition-all duration-300 
    disabled:opacity-50 disabled:cursor-not-allowed disabled:transform-none
    hover:-translate-y-0.5 active:translate-y-0 active:scale-95
  `;
  
  const variants = {
    primary: "bg-white text-black hover:bg-zinc-200 shadow-lg hover:shadow-xl",
    secondary: "bg-zinc-800/50 text-white hover:bg-zinc-700/50 border border-white/5 backdrop-blur-md",
    ghost: "bg-transparent text-zinc-400 hover:text-white hover:bg-white/5",
    cyber: "bg-gradient-to-r from-cyan-600 to-blue-600 text-white shadow-[0_0_20px_rgba(8,145,178,0.4)] hover:shadow-[0_0_30px_rgba(8,145,178,0.6)] border border-cyan-400/20",
  };

  return (
    <button onClick={onClick} disabled={disabled} className={`${baseStyle} ${sizes[size]} ${variants[variant]} ${className}`}>
      <div className="absolute inset-0 w-full h-full bg-gradient-to-r from-transparent via-white/10 to-transparent -translate-x-full group-hover:animate-[shimmer_1.5s_infinite] pointer-events-none" />
      <span className="relative flex items-center gap-2 z-10">
        {Icon && <Icon size={size === 'sm' ? 14 : 18} />}
        {children}
      </span>
    </button>
  );
};

const FileUploader = ({ label, onUpload, currentImage, id, compact = false }) => {
  const fileInputRef = useRef(null);
  const handleFileChange = (e) => {
    const file = e.target.files[0];
    if (file) {
      const reader = new FileReader();
      reader.onloadend = () => onUpload(reader.result, reader.result.split(',')[1]);
      reader.readAsDataURL(file);
    }
  };

  return (
    <div 
      className={`
        group relative w-full ${compact ? 'aspect-square' : 'aspect-video'} 
        bg-zinc-900/30 border border-dashed border-zinc-700/50 rounded-xl 
        hover:border-cyan-500/50 hover:bg-zinc-800/30 transition-all duration-300 
        flex flex-col items-center justify-center overflow-hidden cursor-pointer
      `}
      onClick={() => fileInputRef.current.click()}
    >
      {currentImage ? (
        <>
          <img src={currentImage} alt="Preview" className="w-full h-full object-cover opacity-80 group-hover:scale-105 transition-transform duration-700" />
          <div className="absolute inset-0 bg-black/40 opacity-0 group-hover:opacity-100 transition-opacity flex items-center justify-center">
            <Badge variant="default">点击更换</Badge>
          </div>
          <div className="absolute top-2 right-2 p-1.5 bg-black/60 backdrop-blur rounded-full hover:bg-red-500/80 transition-colors z-20" 
               onClick={(e) => { e.stopPropagation(); onUpload(null, null); }}>
             <X size={12} className="text-white"/>
          </div>
        </>
      ) : (
        <div className="text-center p-4 relative z-10">
          <div className="w-12 h-12 mx-auto mb-3 rounded-full bg-zinc-800/50 flex items-center justify-center group-hover:scale-110 group-hover:bg-cyan-500/20 transition-all duration-300">
            {compact ? <Plus className="h-5 w-5 text-zinc-500 group-hover:text-cyan-400" /> : <Upload className="h-6 w-6 text-zinc-500 group-hover:text-cyan-400" />}
          </div>
          {!compact && <p className="text-xs text-zinc-500 tracking-widest font-medium group-hover:text-zinc-300 transition-colors">{label}</p>}
        </div>
      )}
      <input type="file" ref={fileInputRef} onChange={handleFileChange} className="hidden" accept="image/*" />
      <div className="absolute top-2 left-2 pointer-events-none">
         <span className="text-[9px] font-mono text-zinc-500 bg-black/40 backdrop-blur px-1.5 py-0.5 rounded-md border border-white/5">{id}</span>
      </div>
    </div>
  );
};

const SettingsModal = ({ isOpen, onClose, config, onSave }) => {
  const [localConfig, setLocalConfig] = useState(config);
  const [activeTab, setActiveTab] = useState('analysis'); 

  useEffect(() => { if (isOpen) setLocalConfig(config); }, [isOpen, config]);
  if (!isOpen) return null;

  return (
    <div className="fixed inset-0 z-[100] flex items-center justify-center p-4">
      <div className="absolute inset-0 bg-black/60 backdrop-blur-sm" onClick={onClose} />
      <GlassCard className="w-full max-w-2xl bg-zinc-950/90 border-zinc-800 shadow-2xl relative z-10 flex flex-col max-h-[85vh]">
        <div className="flex items-center justify-between p-6 border-b border-white/5">
          <h3 className="text-xl font-light text-white flex items-center gap-3">
            <Settings size={20} className="text-cyan-400" />
            {/* 文案优化：核心矩阵配置 -> 引擎服务配置 */}
            引擎服务配置 (Engine Config)
          </h3>
          <button onClick={onClose} className="text-zinc-500 hover:text-white transition-colors"><X size={24} /></button>
        </div>
        
        <div className="flex p-2 bg-black/20">
          {['analysis', 'rendering'].map(tab => (
            <button 
              key={tab}
              className={`flex-1 py-3 text-sm font-medium rounded-lg transition-all duration-300 ${activeTab === tab ? 'bg-zinc-800 text-white shadow-lg' : 'text-zinc-500 hover:text-zinc-300'}`}
              onClick={() => setActiveTab(tab)}
            >
              {/* 文案优化：视觉中枢/全息渲染 -> 视觉分析/图像生成 */}
              {tab === 'analysis' ? '视觉分析 (Analysis)' : '图像生成 (Generation)'}
            </button>
          ))}
        </div>

        <div className="p-6 space-y-4 overflow-y-auto flex-1 custom-scrollbar">
          {MODEL_OPTIONS[activeTab].map((model) => (
            <div 
              key={model.id} 
              className={`p-4 rounded-xl border cursor-pointer transition-all duration-300 ${
                (activeTab === 'analysis' ? localConfig.analysisProvider : localConfig.renderingProvider) === model.id 
                ? 'bg-cyan-900/10 border-cyan-500/50 shadow-[0_0_20px_rgba(34,211,238,0.1)]' 
                : 'bg-zinc-900/30 border-white/5 hover:border-zinc-700 hover:bg-zinc-800/30'
              }`}
              onClick={() => setLocalConfig(prev => ({ ...prev, [activeTab === 'analysis' ? 'analysisProvider' : 'renderingProvider']: model.id }))}
            >
              <div className="flex items-center justify-between mb-2">
                <div className="flex items-center gap-3">
                  <div className={`w-5 h-5 rounded-full border flex items-center justify-center transition-colors ${
                    (activeTab === 'analysis' ? localConfig.analysisProvider : localConfig.renderingProvider) === model.id
                    ? 'border-cyan-400' : 'border-zinc-600'
                  }`}>
                    {(activeTab === 'analysis' ? localConfig.analysisProvider : localConfig.renderingProvider) === model.id && <div className="w-2.5 h-2.5 rounded-full bg-cyan-400 shadow-[0_0_8px_rgba(34,211,238,0.8)]" />}
                  </div>
                  <span className="font-medium text-zinc-200">{model.name}</span>
                </div>
                {model.type === 'custom' && <Badge variant="outline">需 API Key</Badge>}
              </div>
              
              {model.type === 'custom' && (activeTab === 'analysis' ? localConfig.analysisProvider : localConfig.renderingProvider) === model.id && (
                <div className="mt-3 pl-8 animate-in fade-in slide-in-from-top-2 duration-300">
                  <div className="flex items-center gap-3 bg-black/40 border border-white/10 rounded-lg px-4 py-3 focus-within:border-cyan-500/50 transition-colors">
                    <Lock size={14} className="text-zinc-500" />
                    <input 
                      type="password" 
                      placeholder={`请输入 ${model.name} API Key`}
                      className="bg-transparent border-none focus:outline-none text-sm text-zinc-200 w-full placeholder:text-zinc-600 font-mono"
                      value={localConfig.apiKeys[model.id] || ''}
                      onChange={(e) => setLocalConfig(prev => ({ ...prev, apiKeys: { ...prev.apiKeys, [model.id]: e.target.value } }))}
                      onClick={(e) => e.stopPropagation()}
                    />
                  </div>
                </div>
              )}
            </div>
          ))}
        </div>

        <div className="p-6 border-t border-white/5 flex justify-end gap-4 bg-black/20">
          <Button variant="ghost" onClick={onClose}>取消</Button>
          <Button variant="cyber" onClick={() => { onSave(localConfig); onClose(); }}>应用配置</Button>
        </div>
      </GlassCard>
    </div>
  );
};

